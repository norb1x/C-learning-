@model EmployeeManagerMVC.Models.Employee

@{
    ViewData["Title"] = "Edytuj pracownika";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Imie"></label>
        <input asp-for="Imie" class="form-control" />
        <span asp-validation-for="Imie" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Nazwisko"></label>
        <input asp-for="Nazwisko" class="form-control" />
        <span asp-validation-for="Nazwisko" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Stanowisko"></label>
        <input asp-for="Stanowisko" class="form-control" />
        <span asp-validation-for="Stanowisko" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="LataDoswiadczenia"></label>
        <input asp-for="LataDoswiadczenia" class="form-control" type="number" min="0" />
        <span asp-validation-for="LataDoswiadczenia" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Anuluj</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
