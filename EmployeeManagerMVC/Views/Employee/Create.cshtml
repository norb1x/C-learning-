@model EmployeeManagerMVC.Models.Employee

<h2>Dodaj nowego pracownika</h2>

<form asp-action="Create" method="post">
    <div class="form-group mb-3">
        <label asp-for="Imie"></label>
        <input asp-for="Imie" class="form-control" />
        <span asp-validation-for="Imie" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Nazwisko"></label>
        <input asp-for="Nazwisko" class="form-control" />
        <span asp-validation-for="Nazwisko" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="Stanowisko"></label>
        <input asp-for="Stanowisko" class="form-control" />
        <span asp-validation-for="Stanowisko" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="LataDoswiadczenia"></label>
        <input asp-for="LataDoswiadczenia" type="number" class="form-control" />
        <span asp-validation-for="LataDoswiadczenia" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Dodaj</button>
    <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
